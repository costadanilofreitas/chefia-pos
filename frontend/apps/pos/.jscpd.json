{
  "threshold": 0,
  "reporters": ["html", "console", "json"],
  "ignore": [
    "**/*.test.*",
    "**/*.spec.*",
    "**/dist/**",
    "**/build/**",
    "**/coverage/**",
    "**/node_modules/**",
    "**/.git/**",
    "**/*.min.js",
    "**/vendor/**",
    "**/public/**",
    "**/*.config.*",
    "**/storybook-static/**"
  ],
  "format": [
    "javascript",
    "typescript", 
    "jsx",
    "tsx"
  ],
  "absolute": true,
  "gitignore": true,
  "minLines": 5,
  "minTokens": 50,
  "output": "./reports/jscpd",
  "silent": false,
  "exitCode": 0
}