{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "composite": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "paths": {
      "@/*": ["./src/*"],
      "@common/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
