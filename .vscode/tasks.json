{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Backend: Start Development Server",
      "type": "shell",
      "command": "python",
      "args": ["-m", "src.main"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}",
          "ENVIRONMENT": "development"
        }
      },
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Backend: Run Tests",
      "type": "shell",
      "command": "python",
      "args": ["-m", "pytest", "src/tests/", "-v"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}",
          "ENVIRONMENT": "test"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "Frontend: Install Dependencies",
      "type": "shell",
      "command": "npm",
      "args": ["install"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": []
    },
    {
      "label": "Frontend: Start POS App",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true
      },
      "options": {
        "cwd": "${workspaceFolder}/frontend",
        "env": {
          "VITE_API_URL": "http://localhost:8001"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "Frontend: Start KDS App",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev:kds"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}/frontend",
        "env": {
          "VITE_API_URL": "http://localhost:8001"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "Frontend: Start Kiosk App",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev:kiosk"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}/frontend",
        "env": {
          "VITE_API_URL": "http://localhost:8001"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "Frontend: Start Waiter App",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev:waiter"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}/frontend",
        "env": {
          "VITE_API_URL": "http://localhost:8001"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "Frontend: Build All Apps",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Frontend: Run Tests",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": []
    },
    {
      "label": "Frontend: Type Check",
      "type": "shell",
      "command": "npm",
      "args": ["run", "type-check", "--workspace=apps/pos"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Frontend: Lint",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Docker: Start Infrastructure",
      "type": "shell",
      "command": "docker-compose",
      "args": ["up", "-d", "postgres", "rabbitmq", "redis"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Docker: Stop Infrastructure",
      "type": "shell",
      "command": "docker-compose",
      "args": ["down"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Full Stack: Start All Services",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Docker: Start Infrastructure",
        "Backend: Start Development Server",
        "Frontend: Start POS App"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
}